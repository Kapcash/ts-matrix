{
  "extends": "tslint:latest",
  "rules": {
    "class-name": true,
    "prefer-const": true,
    "no-require-imports": true,
    "curly": false,
    "variable-name": false,
    "semicolon": [
      true,
      "always"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "adjacent-overload-signatures": false,
    "no-implicit-dependencies": [
      true, 
      "dev"
    ]
  }
}